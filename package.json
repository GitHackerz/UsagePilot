{
  "name": "usagepilot",
  "private": true,
  "version": "0.3.0",
  "description": "A beautiful desktop application to track and visualize your application usage patterns",
  "author": "UsagePilot Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GitHackerz/UsagePilot.git"
  },
  "keywords": [
    "usage-tracker",
    "time-tracking",
    "productivity",
    "tauri",
    "react",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "rust-check": "cd src-tauri && cargo fmt -- --check && cargo clippy -- -D warnings",
    "pre-commit": "npm run lint && npm run type-check && npm run rust-check"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-opener": "^2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.4.1",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
