{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UsagePilot",
  "version": "0.1.1",
  "identifier": "com.usagepilot.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UsagePilot",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "UsagePilot Contributors",
    "copyright": "Copyright (c) 2025 UsagePilot Contributors",
    "category": "Productivity",
    "shortDescription": "Track and visualize your application usage",
    "longDescription": "UsagePilot is a privacy-first desktop application that helps you understand your digital habits by tracking application usage patterns.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/GitHackerz/UsagePilot/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCREVBOTI4N0QxMDgwODEKUldUWFAzMDZmZGZwUzdnZTkrM1VVYjd6blhGaGt2ZWhZK1pLbVNiMXhFVFg2RzJlS0lGQUhqdgo="
    }
  }
}
